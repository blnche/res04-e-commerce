      const id = adresse.getAttribute('data-adresse-id');
      const editBtn = adresse.querySelector('button[data-bs-target="#edit-adresse"]');

      editBtn.addEventListener('click', () => {
         const adresseStreet = adresse.querySelector(".adresse-street").textContent;
         editAdresseForm.querySelector('input[name="street"]').value = adresseStreet;
         const adresseCountry = adresse.querySelector(".adresse-country").textContent;
         editAdresseForm.querySelector('input[name="country"').value = adresseCountry;
         const adresseZip = adresse.querySelector(".adresse-zip").textContent;
         editAdresseForm.querySelector('input[name="zip"').value = adresseZip;
         const adresseCity = adresse.querySelector(".adresse-city").textContent;
         editAdresseForm.querySelector('input[name="city"').value = adresseCity;
      })
   })
</script>